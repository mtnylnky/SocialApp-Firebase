<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profil_resmi_bildirimOgesi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/profil_resmi_bildirimOgesi"
        android:layout_toStartOf="@+id/gonderi_resmi_bildirimOgesi"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/profil_resmi_bildirimOgesi"
        android:layout_toLeftOf="@+id/gonderi_resmi_bildirimOgesi">

        <TextView
            android:id="@+id/txt_kullaniciadi_bildirimOgesi"
            android:text="Kullanıcı Adı"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_yorum_bildirimOgesi"
            android:text="Yorum"
            android:maxLines="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/gonderi_resmi_bildirimOgesi"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentEnd="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true" />
</RelativeLayout>